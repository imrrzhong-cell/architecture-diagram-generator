    "mapping_rules": {
      "m_to_n_relations": {
        "description": "多对多映射关系",
        "examples": [
          "一个业务场景可以映射到多个终端",
          "一个终端可以支持多个业务场景",
          "一个用户角色可以跨多个终端使用"
        ]
      },
      "hierarchy_folding": {
        "description": "多层域折叠",
        "rules": [
          "子模块按父模块归类显示",
          "相同业务域的模块在视觉上分组",
          "移动端简化PC端功能"
        ]
      },
      "domain_binding": {
        "description": "多语义归属",
        "rules": [
          "客户数据是所有业务的基础",
          "销售数据依赖客户数据",
          "营销数据依赖客户数据",
          "服务数据依赖客户数据",
          "互动数据贯穿所有业务"
        ]
      }
    },

    "business_flow": {
      "销售流程": {
        "stages": ["线索", "商机", "报价", "合同", "订单", "回款"],
        "cross_terminal": true,
        "description": "从PC端创建，移动端跟进"
      },
      "营销流程": {
        "stages": ["客户分群", "活动设计", "多渠道触达", "效果分析"],
        "cross_terminal": true,
        "description": "PC端策划，全渠道执行"
      },
      "服务流程": {
        "stages": ["问题提交", "工单创建", "问题处理", "满意度调查"],
        "cross_terminal": true,
        "description": "多渠道接入，后台处理"
      }
    },

    "constraints": {
      "min_cells_per_row": 3,
      "max_cells_per_row": 8,
      "label_length": 16,
      "preserve_row_continuity": true,
      "preserve_cell_boundaries": true,
      "cross_terminal_consistency": true
