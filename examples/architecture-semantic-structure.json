{
  "meta": {
    "version": "1.0",
    "description": "语义结构：二维映射模型 (Terminal × BusinessLayer)"
  },

  "semantic_structure": {
    "layout_model": "matrix",
    "dimensions": {
      "columns": ["PC站", "移动端APP", "小程序"],
      "rows": [
        "交易平台类型",
        "业务场景",
        "用户角色",
        "业务运营系统",
        "交易及履约系统",
        "供应链系统",
        "经营决策系统(BI)",
        "基础服务平台"
      ]
    },

    "terminal_mapping": {
      "PC站": {
        "target_users": ["企业采购人员", "运营人员", "管理人员"],
        "primary_use_cases": ["大宗采购", "数据查看", "系统管理"],
        "priority": "High"
      },
      "移动端APP": {
        "target_users": ["销售人员", "采购人员", "配送员"],
        "primary_use_cases": ["移动办公", "现场作业", "快速下单"],
        "priority": "High"
      },
      "小程序": {
        "target_users": ["零售终端", "个体药店", "轻量用户"],
        "primary_use_cases": ["快速下单", "商品浏览", "订单查询"],
        "priority": "Medium"
      }
    },

    "layer_mapping": {
      "交易平台类型": {
        "row_index": 1,
        "row_type": "header",
        "span_all": true
      },
      "业务场景": {
        "row_index": 2,
        "row_type": "business_grouping",
        "sub_groups": ["供给业务", "控销业务"]
      },
      "用户角色": {
        "row_index": 3,
        "row_type": "actor_grouping",
        "sub_groups": ["上游工业", "下游客户", "平台", "合作伙伴", "其他"]
      },
      "业务运营系统": {
        "row_index": 4,
        "row_type": "capability_layer",
        "sub_groups": ["客户中心", "商品中心", "价格中心", "平台直播", "店铺中心", "三方店铺", "客服中心", "IM系统"]
      },
      "交易及履约系统": {
        "row_index": 5,
        "row_type": "core_system",
        "sub_groups": ["订单规则", "采购中心", "采购协同"]
      },
      "供应链系统": {
        "row_index": 6,
        "row_type": "supply_chain",
        "sub_groups": ["采购中心", "采购协同"]
      },
      "经营决策系统(BI)": {
        "row_index": 7,
        "row_type": "analytics",
        "sub_groups": ["数据平台", "分析平台"]
      },
      "基础服务平台": {
        "row_index": 8,
        "row_type": "infrastructure",
        "sub_groups": ["支付中心", "财务中心", "金融中心", "开放平台"]
      }
    },

    "matrix_cells": {
      "PC站": {
        "业务场景": {
          "供给业务": {
            "modules": ["调拨业务", "推产业务", "开店营销", "上架接单", "黄金流盘", "智能采购", "平台运营", "合同协同"],
            "color": "blue"
          },
          "控销业务": {
            "modules": ["控销业务", "合营业务", "对账开票", "履约结算", "经营赋能", "金融支付", "客户生命周期运营管理", "平台设置/健康度运营管理", "合同协同（续）"],
            "color": "blue"
          }
        },
        "用户角色": {
          "上游工业": {
            "roles": ["大物流品种", "合营品种", "平台商户", "自营商户", "三方商户"],
            "color": "blue"
          },
          "下游客户": {
            "roles": ["单体药店", "中小连锁", "开放平台(ISV)"],
            "color": "pink"
          },
          "平台": {
            "roles": ["地址", "营销", "采购", "财务", "物流"],
            "color": "gray"
          },
          "合作伙伴": {
            "roles": ["物流服务商", "金融服务商"],
            "color": "gray"
          },
          "其他": {
            "roles": ["支付服务商"],
            "color": "gray"
          }
        },
        "业务运营系统": {
          "客户中心": ["注册建档", "客户标签", "会员管理", "主营品类"],
          "商品中心": ["商品主数据", "对码服务", "比价管理", "品类管理"],
          "价格中心": ["价格中心", "黄金内容"],
          "平台直播": ["自营店铺", "直播运营"],
          "店铺中心": ["旗舰店"],
          "三方店铺": ["三方店铺", "运营后台"],
          "客服中心": ["呼叫中心", "任务中心", "知识库", "问题库", "问询销售"],
          "IM系统": ["IM系统", "投诉系统", "客服管理"]
        },
        "交易及履约系统": {
          "订单规则": ["订单规则", "订单状态", "订单创建", "拆分打标", "订单转移", "履约控制", "订单台账", "订单管理", "订单结算", "订单售后"],
          "采购中心": ["寻源策略", "供应商库及主数据", "供应商评价及绩效管理", "采购策略管理", "物流系统", "出入库管理", "库位管理", "库存管理", "订单台账", "运输计划"],
          "采购协同": ["采购协同", "电子报投标", "行业监测", "开放平台", "仓内作业管理", "盘库管理", "盘库转移", "车辆调度", "运输执行", "运输计划", "成本核算", "分摊管理"]
        },
        "经营决策系统(BI)": {
          "数据平台": ["数据采集", "数据梳理", "数据应用", "数据管理"],
          "分析平台": ["物流分析", "财务模型", "财务分析", "可视化报表", "流量分析", "交易分析", "营销分析"]
        },
        "基础服务平台": {
          "支付中心": ["支付配置", "渠道管理", "费率管理", "费用结算"],
          "财务中心": ["财务管理", "全面预算", "金融服务", "费用结算"],
          "金融中心": ["白条/金条", "用户画像", "风险模型", "黄金方"],
          "开放平台": ["API", "EDI"]
        }
      },

      "移动端APP": {
        "业务场景": {
          "供给业务": {
            "modules": ["调拨业务", "推产业务", "开店营销", "上架接单", "智能采购", "平台运营"],
            "color": "blue"
          },
          "控销业务": {
            "modules": ["控销业务", "合营业务", "对账开票", "履约结算", "经营赋能", "金融支付"],
            "color": "blue"
          }
        },
        "用户角色": {
          "上游工业": {
            "roles": ["平台商户", "自营商户", "三方商户"],
            "color": "blue"
          },
          "下游客户": {
            "roles": ["单体药店", "中小连锁"],
            "color": "pink"
          },
          "平台": {
            "roles": ["营销", "采购", "财务"],
            "color": "gray"
          }
        },
        "业务运营系统": {
          "客户中心": ["客户标签", "会员管理"],
          "商品中心": ["商品主数据", "比价管理"],
          "价格中心": ["价格中心"],
          "平台直播": ["直播运营"],
          "店铺中心": ["旗舰店"],
          "三方店铺": ["三方店铺"],
          "客服中心": ["任务中心", "知识库", "问询销售"],
          "IM系统": ["IM系统", "客服管理"]
        },
        "交易及履约系统": {
          "订单规则": ["订单创建", "订单管理", "订单结算", "订单售后"],
          "采购中心": ["供应商库及主数据", "库存管理", "订单台账"],
          "采购协同": ["采购协同", "运输执行", "成本核算"]
        },
        "经营决策系统(BI)": {
          "数据平台": ["数据应用"],
          "分析平台": ["可视化报表", "交易分析"]
        },
        "基础服务平台": {
          "支付中心": ["支付配置", "费用结算"],
          "财务中心": ["财务管理", "费用结算"],
          "金融中心": ["用户画像", "风险模型"],
          "开放平台": ["API"]
        }
      },

      "小程序": {
        "业务场景": {
          "供给业务": {
            "modules": ["开店营销", "上架接单"],
            "color": "blue"
          },
          "控销业务": {
            "modules": ["控销业务", "合营业务"],
            "color": "blue"
          }
        },
        "用户角色": {
          "下游客户": {
            "roles": ["单体药店", "中小连锁"],
            "color": "pink"
          },
          "平台": {
            "roles": ["营销"],
            "color": "gray"
          }
        },
        "业务运营系统": {
          "客户中心": ["会员管理"],
          "商品中心": ["商品主数据"],
          "价格中心": ["价格中心"],
          "店铺中心": ["旗舰店"],
          "三方店铺": ["三方店铺"],
          "客服中心": ["知识库", "问询销售"]
        },
        "交易及履约系统": {
          "订单规则": ["订单创建", "订单管理"],
          "采购中心": ["库存管理"]
        },
        "经营决策系统(BI)": {
          "分析平台": ["可视化报表"]
        },
        "基础服务平台": {
          "支付中心": ["支付配置"],
          "财务中心": ["费用结算"],
          "金融中心": ["用户画像"]
        }
      }
    },

    "mapping_rules": {
      "m_to_n_relations": {
        "description": "多对多映射关系",
        "examples": [
          "一个业务场景可以映射到多个终端平台",
          "一个终端平台可以支持多个业务场景"
        ]
      },
      "hierarchy_folding": {
        "description": "多层域折叠",
        "rules": [
          "子模块按父模块归类显示",
          "相同业务域的模块在视觉上分组"
        ]
      },
      "domain_binding": {
        "description": "多语义归属",
        "rules": [
          "一个模块可以属于多个业务域",
          "显示时以主域为主，辅域用颜色或标记区分"
        ]
      }
    },

    "constraints": {
      "min_cells_per_row": 3,
      "max_cells_per_row": 7,
      "label_length": 16,
      "preserve_row_continuity": true,
      "preserve_cell_boundaries": true
    }
  }
}
