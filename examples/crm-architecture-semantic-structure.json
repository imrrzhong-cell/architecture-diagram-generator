{
  "meta": {
    "version": "1.0",
    "description": "CRM系统语义结构：二维映射模型 (Terminal × BusinessLayer)"
  },

  "semantic_structure": {
    "layout_model": "matrix",
    "dimensions": {
      "columns": ["PC_Web", "Mobile_App", "Mobile_Web", "Open_API"],
      "rows": [
        "接入层（终端/渠道）",
        "业务场景层",
        "用户角色层",
        "核心系统层",
        "业务支撑层",
        "数据层",
        "基础设施层"
      ]
    },

    "terminal_mapping": {
      "PC_Web": {
        "target_users": ["销售经理", "市场总监", "客服主管", "系统管理员"],
        "primary_use_cases": ["复杂业务操作", "数据分析", "系统管理"],
        "priority": "High",
        "features": ["全功能", "批量操作", "高级分析"]
      },
      "Mobile_App": {
        "target_users": ["销售人员", "市场专员", "客服人员"],
        "primary_use_cases": ["移动办公", "外勤签到", "客户拜访"],
        "priority": "High",
        "features": ["离线支持", "LBS定位", "消息推送"]
      },
      "Mobile_Web": {
        "target_users": ["客户", "合作伙伴"],
        "primary_use_cases": ["信息查询", "服务请求", "订单查看"],
        "priority": "Medium",
        "features": ["轻量级", "快速访问", "无需安装"]
      },
      "Open_API": {
        "target_users": ["ERP系统", "电商平台", "呼叫中心", "BI工具"],
        "primary_use_cases": ["数据同步", "系统集成", "数据提取"],
        "priority": "High",
        "features": ["RESTful", "Webhook", "批量接口"]
      }
    },

    "layer_mapping": {
      "接入层（终端/渠道）": {
        "row_index": 1,
        "row_type": "header",
        "span_all": true
      },
      "业务场景层": {
        "row_index": 2,
        "row_type": "business_grouping",
        "sub_groups": ["客户管理", "销售管理", "营销管理", "服务管理", "数据分析"]
      },
      "用户角色层": {
        "row_index": 3,
        "row_type": "actor_grouping",
        "sub_groups": ["销售团队", "市场团队", "服务团队", "管理层", "管理员", "客户", "合作伙伴"]
      },
      "核心系统层": {
        "row_index": 4,
        "row_type": "capability_layer",
        "sub_groups": ["客户中心", "销售中心", "营销中心", "服务中心", "产品中心", "互动中心"]
      },
      "业务支撑层": {
        "row_index": 5,
        "row_type": "support_layer",
        "sub_groups": ["工作流引擎", "搜索引擎", "通知服务"]
      },
      "数据层": {
        "row_index": 6,
        "row_type": "data_layer",
        "sub_groups": ["客户数据域", "销售数据域", "营销数据域", "服务数据域", "互动数据域"]
      },
      "基础设施层": {
        "row_index": 7,
        "row_type": "infrastructure",
        "sub_groups": ["用户中心", "文件服务", "集成平台", "BI平台"]
      }
    },

